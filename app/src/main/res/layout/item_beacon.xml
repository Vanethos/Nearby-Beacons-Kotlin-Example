<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.vanethos.nearbyservice.domain.models.Beacon"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background"
        android:layout_marginTop="8dp">

       <ImageView
           android:id="@+id/list_item_imageView"
           android:layout_width="100dp"
           android:layout_height="100dp"
           app:imageUrl="@{item.imageUrl}"
           tools:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/list_item_title_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{item.title}"
            app:layout_constraintLeft_toRightOf="@id/list_item_imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/list_item_date_textView"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            tools:text="Beacon Message"/>

        <TextView
            android:id="@+id/list_item_date_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:dateText="@{item.dateAdded}"
            app:layout_constraintLeft_toRightOf="@id/list_item_imageView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_item_title_textView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/white"
            tools:text="20AM today"/>

    </android.support.constraint.ConstraintLayout>
</layout>
